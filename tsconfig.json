{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": false,
    "lib": [
      "es2020"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
